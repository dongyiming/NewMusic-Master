<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_author"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/txt_author_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="11sp"
            android:layout_toRightOf="@id/circle_author"
            android:textColor="#222222"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/txt_author_name"
            android:layout_below="@id/txt_author_name"
            android:layout_marginTop="5dp"
            android:textColor="#808387"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlayout_title"
            android:layout_width="match_parent"
            android:layout_height="34dp">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:ellipsize="end"
                android:maxEms="16"
                android:singleLine="true"
                android:textColor="#222222"
                android:textSize="17sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <com.example.nc_basic_ui.view.GridImageView
            android:id="@+id/gridview_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlayout_more"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_pic_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/color_orange"
            android:textSize="@dimen/common_sz_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txt_pic_size"
            android:src="@drawable/img_arror_pic_more" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_lh_0"
            android:layout_alignParentBottom="true"
            android:background="@color/color_splitlint_bg" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="15sp"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:src="@drawable/img_like_black" />

            <ImageView
                android:id="@+id/img_comment"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/img_like"
                android:src="@drawable/img_comment_black" />

            <ImageView
                android:id="@+id/img_share"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/img_comment"
                android:src="@drawable/img_share_black" />

            <ImageView
                android:id="@+id/img_more"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_more" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlayout_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color_orange"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="11dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textColor="#808387"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txt_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="9dp"
                android:paddingLeft="8dp"
                android:textColor="#808387"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>